NAME = school
CC = gcc
SRC = main.c school.c
CFLAGS = -Wall -Werror -Wextra -pedantic
OBJ = $(SRC:.c=.o)
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) -c $(CFLAGS) $< -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

m.h:
   @echo "Header file m.h is missing!" && exit 1

   $(NAME): m.h
